<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.myapplication.ContentActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fg_main"/>
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/qqBlue"
            android:layout_gravity="bottom"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_tijian"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:background="@drawable/selector"
                android:drawableTop="@drawable/tijian"
                android:text="体检"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/rb_analyze"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:background="@drawable/selector"
                android:drawableTop="@drawable/fenxi"
                android:text="结果"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/rb_my"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="我的"
                android:background="@drawable/selector"
                android:drawableTop="@drawable/wode"
                android:textSize="20dp" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>
