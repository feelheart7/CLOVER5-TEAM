<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.TijianFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/fg_analyze"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="体检"
            android:textColor="@color/white"
            android:background="@color/qqBlue"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:background="@mipmap/beijing3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/show"
            android:layout_gravity="center"
            android:layout_marginTop="8pt"
            android:layout_marginBottom="8pt"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/shape2"
            android:text="一键体检"
            android:textColor="@color/light_blue"
            android:textSize="10pt" />
    </LinearLayout>
    </LinearLayout>
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/qqBlue"
        android:orientation="horizontal">
            <RadioButton
                android:gravity="center"
                android:button="@null"
                android:background="@drawable/selector"
                android:drawableTop="@mipmap/kaishijiance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="开始实时监测"/>
            <RadioButton
                android:gravity="center"
                android:button="@null"
                android:drawableTop="@mipmap/jieshujiance"
                android:background="@drawable/selector"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="结束实时监测"/>

    </RadioGroup>

</LinearLayout>
