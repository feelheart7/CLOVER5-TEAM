<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.lenovo.myapplication">

    <!-- 连接网络权限，用于执行云端语音能力 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 获取手机录音机使用权限，听写、识别、语义理解需要用到此权限 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!-- 读取网络信息状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 获取当前wifi状态 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 允许程序改变网络连接状态 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <!-- 读取手机信息权限 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 读取联系人权限，上传联系人需要用到此权限 -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- 读取电话权限 -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <!-- 读取联系人权限 -->
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />

    <application
        tools:replace="android:icon, android:label,android:theme"
        android:allowBackup="true"
        android:icon="@drawable/heart_beat_72"
        android:label="安行"
        android:roundIcon="@drawable/heart_beat_72"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity" />
        <activity android:name=".Main2Activity" />
        <activity android:name=".PersonalInformationActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ContentActivity" >

        </activity>
        <activity android:name=".WriteActivity" />
        <activity
            android:name=".Monitoring"
            android:label="实时监测" />
        <activity
            android:name=".MyInformation"
            android:label="我的信息" />
        <activity
            android:name=".Setting"
            android:label="设置" />
        <activity
            android:name=".Feedback"
            android:label="反馈意见" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".CreateUserActivity" />
        <activity android:name=".Main4Activity">
        </activity>
        <activity android:name=".NewsDisplayActvivity"></activity>
        <activity android:name=".Support"
            android:label="帮助"/>


    </application>

</manifest>