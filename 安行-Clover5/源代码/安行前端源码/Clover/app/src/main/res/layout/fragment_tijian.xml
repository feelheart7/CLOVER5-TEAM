<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.myapplication.TijianFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/fg_analyze"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="体检"
            android:textColor="@color/white"
            android:background="@color/qqBlue"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100pt"
        android:background="@drawable/beijing3"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.skyfishjy.library.RippleBackground xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:rb_color="#0099CC"
                app:rb_duration="3000"
                app:rb_radius="35dp"
                app:rb_rippleAmount="4"
                app:rb_scale="6">

                <Button
                    android:id="@+id/show"
                    android:layout_width="200dp"
                    android:layout_height="200dp"

                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape2"
                    android:text="一键体检"
                    android:textColor="@color/light_blue"
                    android:textSize="10pt" />
            </com.skyfishjy.library.RippleBackground>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccccff"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="80dp">

        <Button
            android:id="@+id/start_show"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_tijian"
            android:button="@null"
            android:drawableTop="@drawable/shishijiance"
            android:gravity="center"
            android:text="实时监测" />
        <Button
            android:id="@+id/write"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/selector_tijian"
            android:button="@null"
            android:drawableTop="@drawable/shoudongshuru"
            android:text="手动输入数据" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccccff"/>


</LinearLayout>
