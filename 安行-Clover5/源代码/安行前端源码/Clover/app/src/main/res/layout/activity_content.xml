<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/ly_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fg_main"/>
    </RelativeLayout>
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/qqBlue"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rb_tijian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/selector"
            android:drawableTop="@drawable/tijian4"
            android:text="体检"
            android:textSize="15dp" />

        <RadioButton
            android:id="@+id/rb_analyze"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/selector"
            android:drawableTop="@drawable/fenxi4"
            android:text="结果"
            android:textSize="15dp" />

        <RadioButton
            android:id="@+id/rb_zixun"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector"
            android:button="@null"
            android:drawableTop="@drawable/zixun4"
            android:gravity="center"
            android:text="资讯"
            android:textSize="15dp" />
        <RadioButton
            android:id="@+id/rb_my"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector"
            android:button="@null"
            android:drawableTop="@drawable/wode4"
            android:gravity="center"
            android:text="我的"
            android:textSize="15dp" />
    </RadioGroup>

</RelativeLayout>